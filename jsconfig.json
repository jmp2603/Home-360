{
    "compilerOptions": {
      "baseUrl": ".", // Set the base URL to the 'app' directory
      "paths": {
        "@assets": ["./app/assets/config.json"],
        "@components": ["./app/components"],
        "@components/*": ["./app/components/*"],
        "@config": ["./app/config"],
        "@config/*": ["./app/config/*"],
        "@screens": ["./app/screens"],
        "@screens/*": ["./app/screens/*"],
        "@redux": ["./app/redux"],
        "@redux/*": ["./app/redux/*"],
        "@libs/": ["./app/libs"],
        "@libs/*": ["./app/libs/*"],
        "@lang/": ["./app/lang"],
        "@lang/*": ["./app/lang/*"]
      }
    },
  }
  